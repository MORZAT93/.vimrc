
set scrolloff=15
colorscheme desert



" Disable compatibility with older versions of Vi
set nocompatible

" Enable syntax highlighting
syntax on

" Set line numbers
set number

" Set tab width and use spaces instead of tabs
set tabstop=4
set shiftwidth=4
set expandtab

" Enable incremental search and ignore case
"set incsearch
"set ignorecase
"set smartcase

" Highlight the current line and column
set cursorline
set cursorcolumn

" Show matching parentheses
set showmatch

" Enable persistent undo
set undofile

" Do not save backup files
set nobackup
set nowritebackup

" Set history size
set history=1000

" Enable mouse support
set mouse=a

" Set scroll offset
set scrolloff=10

" Disable line wrapping
set nowrap

" Show command in the last line
set showcmd
set showmode

